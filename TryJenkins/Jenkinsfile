pipeline {
    agent any

    environment {
        DOTNET_VERSION = '7.0'  // גרסת ה-.NET הרצויה
    }

    stages {
        stage('Checkout') {
            steps {
                // שלב זה מבצע checkout של הקוד מ-Git
                git url: 'https://github.com/EliiShh/TryJenkins.git'
            }
        }

        stage('Build with Docker') {
            steps {
                script {
                    // הרצת Docker container עם .NET SDK בתור root
                    sh '''
                        docker run --rm -v $PWD:/workspace -w /workspace mcr.microsoft.com/dotnet/sdk:7.0 bash -c "
                        apt-get update && 
                        apt-get install -y wget apt-transport-https software-properties-common && 
                        wget https://packages.microsoft.com/config/ubuntu/20.04/prod.list &&
                        mv prod.list /etc/apt/sources.list.d/microsoft-prod.list &&
                        wget -q https://packages.microsoft.com/keys/microsoft.asc -O- | apt-key add - &&
                        apt-get update && 
                        apt-get install -y dotnet-sdk-${env.DOTNET_VERSION} && 
                        dotnet build TryJenkins"
                    '''
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // הרצת טסטים (אם קיימים) בתוך Docker
                    sh '''
                        docker run --rm -v $PWD:/workspace -w /workspace mcr.microsoft.com/dotnet/sdk:7.0 dotnet test TryJenkins
                    '''
                }
            }
        }

        stage('Publish') {
            steps {
                script {
                    // פרסום הפרויקט מתוך Docker
                    sh '''
                        docker run --rm -v $PWD:/workspace -w /workspace mcr.microsoft.com/dotnet/sdk:7.0 dotnet publish TryJenkins -c Release -o ./publish
                    '''
                }
            }
        }
    }

    post {
        always {
            echo 'Build finished!'
        }
        success {
            echo 'Build completed successfully.'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
