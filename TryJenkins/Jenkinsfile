pipeline {
    agent any

    environment {
        DOTNET_VERSION = '7.0'  // שים לב לעדכן את גרסת .NET אם צריך
    }

    stages {
        stage('Checkout') {
            steps {
                // שלב זה מבצע checkout של הקוד מ-Git
                git url: 'https://github.com/EliiShh/TryJenkins.git'
            }
        }

        stage('Install .NET SDK') {
            steps {
                script {
                    // התקנת .NET SDK כ-root
                    sh '''
                        apt-get update
                        apt-get install -y wget apt-transport-https software-properties-common
                        wget https://packages.microsoft.com/config/ubuntu/20.04/prod.list
                        mv prod.list /etc/apt/sources.list.d/microsoft-prod.list
                        wget -q https://packages.microsoft.com/keys/microsoft.asc -O- | apt-key add -
                        apt-get update
                        apt-get install -y dotnet-sdk-${env.DOTNET_VERSION}
                    '''
                }
            }
        }

        stage('Build') {
            steps {
                // בניית הפרויקט עם .NET
                script {
                    sh 'dotnet build TryJenkins'
                }
            }
        }

        stage('Test') {
            steps {
                // הרצת טסטים (אם ישנם)
                script {
                    sh 'dotnet test TryJenkins'
                }
            }
        }

        stage('Publish') {
            steps {
                // שלב לפרסום תוצאות או לקבצים אחרים אם צריך
                script {
                    sh 'dotnet publish TryJenkins -c Release -o ./publish'
                }
            }
        }
    }

    post {
        always {
            echo 'Build finished!'
        }
        success {
            echo 'Build completed successfully.'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
